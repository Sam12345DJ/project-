function countdown() {
    let d = new Date()
    let Months = [`january`, `feburary`, `march`, `april`, `may`, `june`, `july`, `august`, `septmber`, `october`, `november`, `december`];
    let ho = d.getHours();
    let mi = d.getMinutes();
    let sec = d.getSeconds();
    let da = d.getDate();
    if (ho < 10) {
        ho = `0` + ho;
    }
    if (da < 10) {
        da = `0` + da;
    }
    if (mi < 10) {
        mi = `0` + mi;
    }
    if (sec < 10) {
        sec = `0` + sec;
    }
    document.querySelector(`#tunde`).innerHTML = `${Months[d.getMonth()]} 
    ${da}, ${ho} : ${mi} : ${sec}`
}
